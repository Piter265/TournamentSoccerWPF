<Window x:Class="TournamentSoccer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:views="clr-namespace:TournamentSoccer.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5 5">
        <TabControl>
            <TabItem Header="Matches">
                <views:MatchesListingView DataContext="{Binding MatchesViewModel}"/>
            </TabItem>
            <TabItem Header="Table" DataContext="{Binding ClubViewModel}">
                <views:TableView/>
            </TabItem>
            <TabItem Header="Players" DataContext="{Binding PlayersViewModel}">
                <views:PlayersListingView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
